<UserControl x:Class="BioinformaticsSuite.Module.Views.MethodSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="http://prismlibrary.com/"
             mc:Ignorable="d"
             d:DesignHeight="300"
             mvvm:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="RadioButton" x:Name="CustomRadio">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="RootElement">
                                <Border.Background>
                                    <SolidColorBrush/>
                                </Border.Background>
                                <Grid>
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center">
                                    </ContentPresenter>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </StackPanel.Resources>
        
        
        
        <TreeView HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  MinHeight="0">
            
            <TreeViewItem Header="Dna">
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaFindMotif" 
                            GroupName="Methods" 
                            Content="Find Motif"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaFindMotif"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaMolecularWeight" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaReadingFrame" 
                            GroupName="Methods" 
                            Content="ReadingFrame"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaReadingFrame"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaRestrictionDigest" 
                            GroupName="Methods"
                            Content="Restriction Digest" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaRestrictionDigest"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaStatistics" 
                            GroupName="Methods" Content="DNA Statistics"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaStatistics"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaTranscribe" 
                            GroupName="Methods" 
                            Content="Transcribe"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaTranscribe"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="DnaTranslate" 
                            GroupName="Methods" 
                            Content="Translate" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaTranslate"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>
          </TreeView>

        <TreeView HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  MinHeight="0">

            <TreeViewItem Header="Rna">
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="RnaTranslate" 
                            GroupName="Methods" 
                            Content="Find Motif"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaFindMotif"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="RnaMolecularWeight" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>

        <TreeView HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  MinHeight="0">

            <TreeViewItem Header="Protein">
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ProteinMolecularWeight" 
                            GroupName="Methods" 
                            Content="Find Motif"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaFindMotif"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ProteinOpenReadingFrames" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ProteinStatistics" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>

        <TreeView HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  MinHeight="0">

            <TreeViewItem Header="Conversion">
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ConversionCombineFasta" 
                            GroupName="Methods" 
                            Content="Find Motif"
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaFindMotif"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ConversionSplitFasta" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ConversionGenbankFasta" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ConversionGenbankTranslate" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ConversionEmblFasta" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <RadioButton 
                            x:Name="ConversionEmblTranslate" 
                            GroupName="Methods"
                            Content="Molecular Weight" 
                            Command="{Binding Path=SelectMethodCommand}" 
                            CommandParameter="DnaMolecularWeight"/>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>

